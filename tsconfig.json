{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["ES2022", "DOM"],

    "allowJs": true,
    "checkJs": true,
    "noEmit": true,

    "strict": false,
    "skipLibCheck": true,

    "types": ["node"]
  },
  "include": [
    "js/**/*.js",
    "server/**/*.js",
    "testies/**/*.js",
    "vite.config.js",
    "types/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "docs",
    "dist",
    "web_modules",
    "js/vendor/**",
    "js/index.js"
  ]
}


